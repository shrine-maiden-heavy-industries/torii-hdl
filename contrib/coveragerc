[run]
branch = True
omit =
  */setup.py
  */noxfile.py
  */__main__.py
  # This is not ideal but there is no good way to do tests/coverage for this.
  */torii/_warnings.py

[report]
show_missing = True
skip_covered = True
exclude_lines =
  :nocov:
  # allow defensive code
  ^\s*raise AssertionError\b
  ^\s*raise NotImplementedError\b
  ^\s*return NotImplemented\b
  ^\s*raise$

  # typing-related code
  ^\s*if (False|TYPE_CHECKING):
  : \.\.\.(\s*#.*)?$
  ^ +\.\.\.$
  -> ['"]?NoReturn['"]?:

  # Skipped/Failed tests
  ^\s*self\.skipTest\b
  ^\s*self\.fail\b

partial_branches =
   :nobr:
